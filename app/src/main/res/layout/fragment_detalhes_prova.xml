<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.alura.agenda.fragments.DetalhesProvaFragment">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="8dp"
        tools:context="br.com.alura.agenda.DetalhesProvaActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_dark_background">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Materia"
                    android:padding="16dp"
                    android:textSize="22sp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:id="@+id/detalhes_prova_materia"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data"
                    android:padding="16dp"
                    android:textSize="22sp"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:id="@+id/detalhes_prova_data"
                    />



            </RelativeLayout>

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/detalhe_prova_topicos"></ListView>
        </LinearLayout>


    </android.support.v7.widget.CardView>


</FrameLayout>
